{{#section 'head'}}
    <link rel="stylesheet" type="text/css" href="css/forgetpass.css">
{{/section}}

   <div class="wrapper">
        <header id="J_header" class="header">
            <a class="J_back go-back"></a>
            忘记密码
        </header>

        <ul id="J_navbar" class="nav-list">
            <li class="nav-item"><a herf=":;" class="J_link link active">手机</a></li>
            <li class="nav-item"><a herf=":;" class="J_link link">邮箱</a></li>
        </ul>

        <form method="post" action="/forgetpass" class="J_form form" autocomplete="off">
            <p class="input-form">
                <i class="prefix">+86</i>
                <input id="J_username" class="user-name" type="input" name="username" value="" required="required" autocomplete="off" placeholder="请输入手机号"/ >
            </p>
            <p class="input-form">
                <input id="J_password" class="phone-code" type="input" name="code" value="" required="required" autocomplete="off" placeholder="请输入验证码"/>
                <button id="J_sendcode" class="code-style" type="button" href=":;">获取验证码</button>
            </p>
            <p class="input-form">
                <input id="J_password" class="password" type="password" name="text" value="" required="required" autocomplete="off" placeholder="请输入6~14位字符的新密码"/>
                 <button id="J_showpass" class="view-code" type="button" href=":;"></button>
            </p>
            <p>
                <input id="J_phone" class="login-submit" type="submit" name="submit" value="保存"/>
            </p>
        </form>

        <form method="post" action="/findbyemail" class="J_form form hide" autocomplete="off">
            <p class="input-form">
                <input id="J_email" class="email" type="input" name="email" value="" required="required" autocomplete="off" placeholder="请输入邮箱地址"/ >
            </p>
            <p class="input-form">
                <input id="J_inputcode" class="email-code" type="input" name="code" value="" required="required" autocomplete="off" placeholder="请输入验证码"/>
                <img id="J_img" class="image-code" src="images/code.jpg" alt="图形验证码"/>
                <button id="J_freshcode" class="img-style" type="button" href=":;"></button>
            </p>
            <p>
                <input id="J_email" class="login-submit" type="submit" name="submit" value="保存"/>
            </p>
        </form>
   </div>

{{#section 'jscodelink'}}
    <script type="text/javascript" src="js/forgetpass.js"></script>
{{/section}}