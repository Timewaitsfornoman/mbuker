{{#section 'head'}}
    <style type="text/css">
        * {
            margin: 0;
            padding: 0;
        }
        
        html,
        body {
            height: 100%;
            width: 100%;
            overflow: hidden;
            padding: 0 16px;
            box-sizing: border-box;
        }
        
        a {
            display: block;
            font-size: 14px;
            text-decoration: none;
            -webkit-tap-highlight-color: rgba(0,0,0,0);  
            -webkit-tap-highlight-color: transparent;
        }
        .tujia {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            width: 100%;
            height: 100%;
            overflow: hidden;
        }
        .content {
            position: absolute;
            top: 50%;
            left:  50%;
            width: 100%;
            -webkit-transform: translate(-50%,-50%);
            transform: translate(-50%,-50%);
        }
        
        .content img {
            width: 60%;
            margin: 0 auto;
            display: block;
        }
        
        .content span {
            font-size: 18px;
            text-align: center;
            display: block;
            color: #333;
        }
        
        .content a {
            color: #66f;
            font-size: 16px;
            text-align: center;
            margin-top: 16px;
            line-height: 18px;
            text-decoration: underline;
        }
    </style>
{{/section}}

